<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.truecaller.sample.PlaceholderFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/labelLogin"
            android:id="@+id/tv_login"
            android:singleLine="false"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_login"
            android:hint="@string/hintLogin"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/labelPassword"
            android:id="@+id/tv_password"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_password"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/labelGroup"
            android:id="@+id/tv_group"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <!-- from API 11: android:spinnerMode="dropdown" -->
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/sp_group"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelRememberLogin"
            android:id="@+id/cb_login"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:checked="false"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/labelRememberPassword"
            android:id="@+id/cb_password"
            android:checked="false"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"/>

        <RadioGroup
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/rg_options"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelChooseGroup"
                android:id="@+id/rb_chooseGroup"
                android:checked="false"/>

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/labelLastOpened"
                android:id="@+id/rb_openLast"
                android:checked="true"/>
        </RadioGroup>

        <!-- from API 14: android:background="@android:color/holo_blue_dark" -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnProceed"
            android:id="@+id/bt_proceed"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="#ff0099cc"
            android:textColor="@android:color/primary_text_dark"/>
    </LinearLayout>
</ScrollView>